<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.UserFragment"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="80dp"
        >

        <ImageView
            android:id="@+id/userFragment_user_image"
            android:layout_width="100dp"
            android:layout_height="100dp"

            />

        <TextView
            android:id="@+id/userFragment_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Display User name"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:textSize="22sp"
            android:textColor="#151515"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change profile Pic"
        android:textSize="22sp"
        android:textColor="#151515"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:drawableStart="@drawable/ic_baseline_add_a_photo_24"
        android:drawablePadding="15dp"
        />

    <TextView
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawablePadding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:text="@string/change_your_name"
        android:textSize="22sp"
        android:textColor="#151515"
        />

    <TextView

        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:drawablePadding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="@string/change_your_password"
        android:textSize="22sp"
        android:textColor="#151515"
        android:background="?attr/selectableItemBackground"
        />
    <TextView

        android:drawableStart="@drawable/ic_exit"
        android:drawablePadding="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:text="Log out"
        android:textSize="22sp"
        android:textColor="#151515"
        android:background="?attr/selectableItemBackground"
        />

</LinearLayout>